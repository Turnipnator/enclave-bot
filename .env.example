# Enclave API Configuration
ENCLAVE_API_KEY=your_api_key_here
ENCLAVE_API_SECRET=your_api_secret_here
ENCLAVE_ENV=PROD  # PROD or TESTNET

# Trading Configuration
TRADING_MODE=paper  # paper or live
LOG_LEVEL=info  # debug, info, warn, error

# Risk Management
MAX_DAILY_LOSS=50  # Maximum daily loss in USD
POSITION_SIZE=0.001  # Small position size for volume farming
MAX_POSITIONS=5  # Multiple concurrent positions for more volume

# Points Farming Strategy
ENABLE_VOLUME_FARMING=true  # Enable high-frequency trading for points
MIN_TRADE_INTERVAL=60  # Minimum seconds between trades
TARGET_DAILY_TRADES=100  # Target number of trades per day
SPREAD_TOLERANCE=0.001  # Maximum spread to accept for farming trades

# Strategy Parameters
LOOKBACK_PERIOD=10  # Shorter period for more signals
VOLUME_MULTIPLIER=1.5  # Lower threshold for more trades
TRAILING_STOP_PERCENT=1.5  # Tighter stops for quicker turnover
USE_SCALPING=true  # Enable scalping mode for volume
BREAKOUT_BUFFER=0.001  # 0.1% buffer for breakout detection
TAKE_PROFIT_PERCENT=6  # Optional take profit target percentage

# Trend Following Strategy (catches slow bleeds/grinds)
ENABLE_TREND_FOLLOWING=false  # CRITICAL: Keep OFF until tested in paper mode
TREND_FOLLOWING_SMA_PERIOD=20  # SMA period for price confirmation
TREND_FOLLOWING_MIN_CONSECUTIVE_TRENDS=3  # Minimum consecutive trend checks (3 = 15 mins)
TREND_FOLLOWING_MAX_DISTANCE_FROM_HIGH=2  # Max % distance from recent high/low to enter

# Markets to Trade (comma-separated)
TRADING_PAIRS=BTC-USD.P,ETH-USD.P,SOL-USD.P,AVAX-USD.P

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=true

# Webhook Configuration (optional - for TradingView alerts)
ENABLE_WEBHOOKS=false
WEBHOOK_PORT=3000